<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>bodyUploadServlet</servlet-name>
		<servlet-class>com.example.servlet.BodyUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>bodyUploadServlet</servlet-name>
		<url-pattern>/upload/body</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>formUploadServlet</servlet-name>
		<servlet-class>com.example.servlet.FormUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>formUploadServlet</servlet-name>
		<url-pattern>/upload/form</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>fileDownloadServlet</servlet-name>
		<servlet-class>com.example.servlet.FileDownloadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileDownloadServlet</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>